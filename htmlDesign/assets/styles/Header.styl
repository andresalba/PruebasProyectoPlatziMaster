#toggle:checked + menu
    background-color $background-menu
    display block
    overflow hidden
    position fixed
    left -40px
    top 0
    z-index 3
.Header
    width 100%
    position fixed;
    background $background-color
    z-index 1
    margin: 0px;
    padding: 0px;
    top: 0;
    &__principal
        padding 15px 0 0 0 
        display grid
        grid-template-columns 8% 70% 22%
        grid-gap 5px
        align-items center
        max-width 100%
        label
            font-size $font-size-burguer
        &__logo
            img 
                height 35px
        &__shopping_cart
            img 
                height 35px
    &__menu 
        display none
        width 100%
        text-align center
        border-bottom 1px solid #c2bebe
        height 95%
        margin 60px 0 0 0
    &__menu li 
        border-bottom 1px solid grey
        padding 20px
    &__menu--container
        width 100%
        height 180px
        display grid
        grid-template-columns 40% 50%
        grid-gap 10px
        grid-auto-rows minmax(50px, auto)
        align-items center
        border-bottom 2px solid grey
    &__menu--avatar
        img 
            width 65px
            height 65px
            border-radius 55%
    &__menu--country
        img 
            width 50px
            height 30px
    &__menu--session
        text-align left
        input 
            background-image linear-gradient($button-color , $button-color-secondary )
            border none
            height 35px
            width 150px
            border-radius 5px
    &__menu--name
        text-align left
    &__menu--countryText
        text-align left
    &__menu--dark
        display flex
        align-items center
        text-align left
    &__menu--darkMode
        position: relative;
        -webkit-appearance: none;
        outline: none;
        width: 50px;
        height: 30px;
        background-color: #fff;
        border: 1px solid #D9DADC;
        border-radius: 50px;
        box-shadow: inset -20px 0 0 0 #fff;
    &__menu--darkMode:after
        content: "";
        position: absolute;
        top: 1px;
        left: 1px;
        background: transparent;
        width: 26px;
        height: 26px;
        border-radius: 50%;
        box-shadow: 2px 4px 6px rgba(0,0,0,0.2);
    &__menu--darkMode:checked 
        box-shadow: inset 20px 0 0 0 $button-color;
        border-color: $button-color;
    &__menu--darkMode:checked:after
        left: 20px;
        box-shadow: -2px 4px 3px rgba(0,0,0,0.05);
    &__search
        margin 10px 0 10px 0
        height 30px
        display flex
        img 
            width 30px
            height 30px
            background $background-search
            border-radius 5px 0 0 5px
        input 
            width 80%
            height 30px
            border-radius 0 5px 5px 0
            outline none
            border none
            background $background-search
            font-size $font-size-search
            padding 0 8px 0 8px
@media only screen and (min-width 600px) 
    .Header
        &__principal
            padding 15px 0 0 0 
            display grid
            grid-template-columns 20% 65% 10%
            grid-gap 5px
        &__principal div:nth-of-type(1) {
            order 2
        }
        &__principal div:nth-of-type(3) {
            order 3
        }
        &__principal__logo
            img 
                height 80px
        &__principal__shopping_cart
            img 
                height 60px        
        &__menu  
            display flex
            justify-content center
            margin 0 30px 0 0
            border none
        &__menu li 
            display block
            border-bottom 0
            padding 0
        &__menu li:hover
            background $background-search
            border-bottom 0
        &__menu a 
            display block  
            padding 20px
        &__menu--container
            display none
            flex-direction row
        &__principal__toggle
            justify-content center
            label
                display none
        &__search
            margin 10px 0 40px 0
            height 30px
            display flex
            justify-content center
            img 
                width 40px
                height 40px
                background $background-search
                border-radius 5px 0 0 5px
            input 
                width 60%
                height 40px
                border-radius 0 5px 5px 0
                outline none
                border none
                background $background-search
                font-size $font-size-search
                padding 0 8px 0 8px 
        

